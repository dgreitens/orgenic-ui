{
  "name": "@orgenic/orgenic-ui",
  "version": "0.4.4-beta.8",
  "description": "ORGENIC UI",
  "author": {
    "name": "MAXIMAGO GmbH",
    "email": "dev@maximago.de"
  },
  "homepage": "https://orgenic.org/",
  "license": "MIT",
  "keywords": [
    "web components",
    "components",
    "custom elements",
    "user experience",
    "UX",
    "themes"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orgenic/orgenic-ui.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "unpkg": "dist/orgenic-ui.js",
  "jsdelivr": "dist/orgenic-ui.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
      "build": "npm run icons && stencil build --docs",
      "build.watch": "npm icons && stencil build --docs --watch",
      "start": "stencil build --dev --watch --serve --config stencil.run.config.ts",
      "test": "stencil test --spec --e2e",
      "test.spec": "stencil test --spec",
      "test.ci": "stencil test --spec --e2e --ci",
      "test.watch": "stencil test --spec --e2e --watchAll",
      "check-licenseheader": "node ./.scripts/check-licenseheaders.js",
      "pack-icons": "npx svgstore-cli -o ./src/assets/icons.svg ./src/assets/icons/**/*.svg",
      "cleanup-icons": "npx replace-in-file /fill=\\\".*?\\\"/g \" \" ./src/assets/icons.svg --isRegex && npx replace-in-file /stroke=\\\".*?\\\"/g \" \"  ./src/assets/icons.svg --isRegex",
      "icons": "npm run pack-icons && npm run cleanup-icons"
  },
  "pre-commit": [
    "check-licenseheader"
  ],
  "dependencies": {
    "replace-in-file": "^5.0.2"
  },
  "devDependencies": {
    "@stencil/core": "^1.0.3",
    "@stencil/sass": "^1.0.0",
    "@types/jest": "24.0.13",
    "@types/puppeteer": "1.12.4",
    "@types/tabulator-tables": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "copyfiles": "^2.1.0",
    "eslint": "^5.16.0",
    "glob": "^7.1.4",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "moment": "^2.24.0",
    "node-sass": "^4.13.1",
    "pre-commit": "^1.2.2",
    "puppeteer": "1.17.0",
    "svgstore-cli": "^1.3.1",
    "systemjs": "^3.1.6",
    "tabulator-tables": "^4.2.7",
    "tslib": "^1.10.0",
    "typescript": "^3.5.2"
  }
}
